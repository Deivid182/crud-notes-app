<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=put" method="post">
        <input type="hidden" name="_method" value="put">
        <div class="mb-3">
          <input type="text" class="form-control" name="title" placeholder="Type new Title"
          value="{{note.title}}"
          >
        </div>
        <div class="mb-3">
          <textarea name="description" class="form-control" placeholder="Type new Description">{{note.description}}</textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-primary w-100">Edit</button>
        </div>
      </form>
    </div>
  </div>
</div>