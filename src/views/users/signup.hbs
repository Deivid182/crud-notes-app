<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Account Register
      </div>

      <div class="card-body">
        <form action="/users/signup" method="post">
          <div class="mb-3">
            <input type="text" class="form-control" name="name" placeholder="Type your name" value="{{name}}">
          </div>
          <div class="mb-3">
            <input type="email" class="form-control" name="email" placeholder="Type your email" value="{{email}}">
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" name="password" placeholder="Type your password" value="{{password}}">
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" name="confirm_password" placeholder="Type your password again" value="{{confirm_password}}">
          </div>

          <div class="mb-3">
            <button class="btn btn-primary w-100" type="submit">SignUp</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>